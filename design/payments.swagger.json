{
  "swagger": "2.0",
  "info": {
    "title": "Payments",
    "description": "This is a payments API design.",
    "version": "3.5.0",
    "contact": {
      "name": "Liam Humphreys",
      "url": "https://github.com/Angry-Potato"
    },
    "license": {
      "name": "MIT",
      "url": "https://raw.githubusercontent.com/Angry-Potato/go-pay-me/master/LICENSE"
    }
  },
  "host": "localhost",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions": {
    "Payment": {
      "type": "object",
      "description": "A payment between two parties.",
      "required": ["id", "organisation_id", "attributes"],
      "properties": {
        "type": {
          "type": "string",
          "default": "Payment",
          "enum": ["Payment"]
        },
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "version": {
          "type": "integer",
          "default": 0,
          "format": "int32"
        },
        "organisation_id": {
          "type": "string",
          "format": "uuid"
        },
        "attributes": {
          "$ref": "#/definitions/PaymentAttributes"
        }
      },
      "example": {
        "type": "Payment",
        "id": "216d4da9-e59a-4cc6-8df3-3da6e7580b77",
        "version": 0,
        "organisation_id": "743d5b63-8e6f-432e-a8fa-c5d8d2ee5fcb",
        "attributes": {
          "$ref": "#/definitions/PaymentAttributes/example"
        }
      }
    },
    "PaymentAttributes": {
      "type": "object",
      "description": "Details of a payment.",
      "required": [
        "amount",
        "beneficiary_party",
        "charges_information",
        "currency",
        "debtor_party",
        "end_to_end_reference",
        "numeric_reference",
        "payment_id",
        "payment_purpose",
        "payment_scheme",
        "payment_type",
        "processing_date",
        "reference",
        "scheme_payment_sub_type",
        "scheme_payment_type",
        "sponsor_party"
      ],
      "properties": {
        "amount": {
          "type": "string",
          "format": "money"
        },
        "beneficiary_party": {
          "$ref": "#/definitions/Party"
        },
        "charges_information": {
          "$ref": "#/definitions/Charges"
        },
        "currency": {
          "type": "string"
        },
        "debtor_party": {
          "$ref": "#/definitions/Party"
        },
        "end_to_end_reference": {
          "type": "string"
        },
        "fx": {
          "$ref": "#/definitions/CurrencyExchange"
        },
        "numeric_reference": {
          "type": "string"
        },
        "payment_id": {
          "type": "string"
        },
        "payment_purpose": {
          "type": "string"
        },
        "payment_scheme": {
          "type": "string"
        },
        "payment_type": {
          "type": "string",
          "enum": ["Credit"]
        },
        "processing_date": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "scheme_payment_sub_type": {
          "type": "string",
          "enum": ["InternetBanking"]
        },
        "scheme_payment_type": {
          "type": "string",
          "enum": ["ImmediatePayment"]
        },
        "sponsor_party": {
          "$ref": "#/definitions/Party"
        }
      },
      "example": {
        "amount": "100.21",
        "beneficiary_party": {
          "$ref": "#/definitions/Party/example"
        },
        "charges_information": {
          "$ref": "#/definitions/Charges/example"
        },
        "currency": "GBP",
        "debtor_party": {
          "$ref": "#/definitions/Party/example"
        },
        "end_to_end_reference": "Wil piano Jan",
        "fx": {
          "$ref": "#/definitions/CurrencyExchange/example"
        },
        "numeric_reference": "1002001",
        "payment_id": "123456789012345678",
        "payment_purpose": "Paying for goods/services",
        "payment_scheme": "FPS",
        "payment_type": "Credit",
        "processing_date": "2017-01-18",
        "reference": "Payment for Em's piano lessons",
        "scheme_payment_sub_type": "InternetBanking",
        "scheme_payment_type": "ImmediatePayment",
        "sponsor_party": {
          "$ref": "#/definitions/Party/example"
        }
      }
    },
    "Party": {
      "type": "object",
      "description": "A real-life entity capable of making and receiving payments.",
      "required": ["account_number", "bank_id", "bank_id_code"],
      "properties": {
        "account_name": {
          "type": "string"
        },
        "account_number": {
          "type": "string"
        },
        "account_number_code": {
          "type": "string"
        },
        "account_type": {
          "type": "integer",
          "format": "int32"
        },
        "address": {
          "type": "string"
        },
        "bank_id": {
          "type": "string"
        },
        "bank_id_code": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "example": {
        "account_name": "W Owens",
        "account_number": "31926819",
        "account_number_code": "BBAN",
        "account_type": 0,
        "address": "1 The Beneficiary Localtown SE2",
        "bank_id": "403000",
        "bank_id_code": "GBDSC",
        "name": "Wilfred Jeremiah Owens"
      }
    },
    "Money": {
      "type": "object",
      "description": "Makes the world go round.",
      "required": ["amount", "currency"],
      "properties": {
        "amount": {
          "type": "string",
          "format": "money"
        },
        "currency": {
          "type": "string"
        }
      },
      "example": {
        "amount": "5.00",
        "currency": "GBP"
      }
    },
    "Charges": {
      "type": "object",
      "description": "A list of monies to be deducted from somewhere.",
      "required": [
        "bearer_code",
        "sender_charges",
        "receiver_charges_amount",
        "receiver_charges_currency"
      ],
      "properties": {
        "bearer_code": {
          "type": "string"
        },
        "sender_charges": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Money"
          }
        },
        "receiver_charges_amount": {
          "type": "string",
          "format": "money"
        },
        "receiver_charges_currency": {
          "type": "string"
        }
      },
      "example": {
        "bearer_code": "SHAR",
        "sender_charges": [
          {
            "amount": "5.00",
            "currency": "GBP"
          },
          {
            "amount": "10.00",
            "currency": "GBP"
          }
        ],
        "receiver_charges_amount": "1.00",
        "receiver_charges_currency": "USD"
      }
    },
    "CurrencyExchange": {
      "type": "object",
      "description": "An amount being exchanged from a given currency.",
      "required": [
        "contract_reference",
        "exchange_rate",
        "original_amount",
        "original_currency"
      ],
      "properties": {
        "contract_reference": {
          "type": "string"
        },
        "exchange_rate": {
          "type": "string"
        },
        "original_amount": {
          "type": "string",
          "format": "money"
        },
        "original_currency": {
          "type": "string"
        }
      },
      "example": {
        "contract_reference": "FX123",
        "exchange_rate": "2.00000",
        "original_amount": "200.42",
        "original_currency": "USD"
      }
    }
  },
  "paths": {
    "/payments": {
      "post": {
        "summary": "Create new payment.",
        "description": "Creates a new payment, and all of its' sub-resources.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Payment that needs to be added to the service",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Payment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/Payment"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "summary": "List all payments.",
        "description": "Lists all payments.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Payment"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "summary": "Bulk update payments.",
        "description": "Bulk updates payments, as well as all their sub-resources.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Payments to be updated.",
            "required": true,
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Payment"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Payment"
              }
            }
          },
          "304": {
            "description": "Not Modified"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "summary": "Delete all payments.",
        "description": "Deletes all payments, and their sub-resources.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/payments/{paymentId}": {
      "get": {
        "summary": "Find payment by ID.",
        "description": "Returns a single payment",
        "parameters": [
          {
            "name": "paymentId",
            "in": "path",
            "description": "ID of payment to return",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Payment"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "Hosted on Github",
    "url": "https://raw.githubusercontent.com/Angry-Potato/go-pay-me/master/design/payments.swagger.json"
  }
}
